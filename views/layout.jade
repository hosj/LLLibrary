doctype html
html(ng-app="LLLibrary")
  head
    title= title
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/lib/bootstrap.min.css', media='screen')
    link(rel='stylesheet', href='/stylesheets/lib/ngDialog.min.css')
    link(rel='stylesheet', href='/stylesheets/lib/ngDialog-theme-default.min.css')
    link(rel='stylesheet', href='/stylesheets/lib/sweetalert.css')
  body
    // Fixed navbar
    .navbar.navbar-default.navbar-fixed-top(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') La Leche League Library
        .navbar-collapse.collapse
          ul.nav.navbar-nav
            if (!user)
              li
                a(href="/login") Login
              li
                a(href="/register") Register
            if (user)
              li
                a(href='#/') Home
              li
                a(href='#people') People
              li
                a(href='#books') Books
        // /.nav-collapse
    block content

  // lang
  script(src='/javascripts/lang.js')

  // Angular
  script(src='/javascripts/lib/angular.min.js')
  script(src='/javascripts/lib/angular-route.min.js')
  script(src='/javascripts/lib/ngDialog.min.js')
  script(src='/javascripts/lib/sweetalert.min.js')
  script(src='/javascripts/lib/angular-sweetalert.min.js')
  script(src='/javascripts/lib/flow.min.js')
  script(src='/javascripts/lib/dirPagination.js')
  script(src='/javascripts/lib/moment.js')
  script(src='/javascripts/lib/angular-moment.min.js')
  
  // Our main app
  script(src='/javascripts/lllibrary.js')
  
  // Controllers
  script(src='/javascripts/controllers/MainController.js')
  script(src='/javascripts/controllers/PeopleController.js')
  script(src='/javascripts/controllers/BooksController.js')
  script(src='/javascripts/controllers/BookController.js')
  
  // Directives
