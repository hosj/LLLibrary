// login modal
#loginModal.modal.show(tabindex='-1', role='dialog', aria-hidden='true')
  .modal-dialog
    .modal-content
      .modal-header
        button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
        |           
        h1.text-center Login
      |       
      .modal-body
        form.form.col-md-12.center-block
          .form-group
            input.form-control.input-lg(type='text', placeholder='Email')
          |             
          .form-group
            input.form-control.input-lg(type='password', placeholder='Password')
          |             
          .form-group
            button.btn.btn-primary.btn-lg.btn-block Sign In
            |               
            span.pull-right
              a(href='#') Register
            span
              a(href='#') Need help?
      |       
      .modal-footer
        .col-md-12
          button.btn(data-dismiss='modal', aria-hidden='true') Cancel
